[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  dc = diff --cached
  lg = log -p
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  lajos = log --graph --pretty=format:'%Cred%h%Creset - %Cgreen%cd%Creset %C(bold cyan)%an%Creset %C(yellow)%d%Creset %s ' --abbrev-commit --date=short
  ls = ls-files
 # Show files ignored by git:
  ign = ls-files -o -i --exclude-standard
